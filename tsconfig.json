{
    "compilerOptions": {
      "module": "commonjs",
      "lib": ["es6", "dom"],
      "target": "es6",
      "esModuleInterop": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "importHelpers": true,
      "strictNullChecks": false,
      "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": true,
      "outDir": "./dist",
      "sourceMap": true,
      "declaration": true
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*test.ts",
      "dist"
    ]
  }